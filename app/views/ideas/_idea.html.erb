<table>
  <tr>
    <% if idea.description.length > 250 %>
  	  <td width='550' bgcolor='#eee'><%= idea.description.first(250) %>.. <%= link_to 'Read More', agenda_idea_path(@agenda.id, idea.id) %></td>
    <% else %>
      <td width='550' bgcolor='#eee'><%= idea.description %></td>
    <% end %>
  	<td> | Likes</td>
    <% idea.likes == nil ? idea.likes = 0 : idea.likes = idea.likes %>
    <td><%= idea.likes %></td>
    <% if user_signed_in? %>
      <td> | <%= link_to image_tag( 'like.gif', :border=>0, :title=>'Like'), agenda_idea_path(@agenda.id, idea.id), :method => :put %></td>
    <% end %>
    <% if user_signed_in? && current_user.role == "admin" %>
      <td> | <%= link_to image_tag( 'iconDelete.gif', :border=>0, :title=>'Delete'), [idea.agenda, idea], :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
  <tr>
    <td><div class="idea-separator round"></div></td>    
    <td></td>
    <td></td>
    <% if user_signed_in? %>
      <td></td>
    <% end %>
    <% if user_signed_in? && current_user.role == "admin" %>
      <td></td>
    <% end %>
  </tr>
</table>