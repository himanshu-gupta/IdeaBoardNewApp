<h1>Listing ideas</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Likes</th>
    <th>Agenda</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><div id="idea-description"><%= idea.description %></div></td>
    <td><%= idea.likes %></td>
    <td><%= idea.agenda %></td>
    <td><div class="create-button round"><%= link_to 'Show', idea %></div></td>
    <td><div class="create-button round"><%= link_to 'Edit', edit_idea_path(idea) %></div></td>
    <td><div class="create-button round"><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
  </tr>
<% end %>
</table>

<br />

<div class="create-button round"><%= link_to 'New Idea', new_idea_path %></div>
