<h2>List of Users</h2>
<table> 
<% @users.each do |user| %>
  <tr>
  	<td width='50'></td>
    <td width='320'><%= user.email %></td>
    <td width='30'>is</td>
  	<td width='75'><b><i><%= user.role %></i></b></td>
    <td> | <%= link_to image_tag( 'show.gif', :border=>0, :title=>'User Information'), user, method: :get %></td>
    <td> | <%= link_to image_tag( 'edit.png', :border=>0, :title=>'Edit'), edit_user_path(user) %></td>
    <td> | <%= link_to image_tag( 'iconDelete.gif', :border=>0, :title=>'Delete'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <tr>
  	<td></td>
    <td colspan=7><div class="idea-separator round"></div></td>
  </tr>
<% end %>
</table>